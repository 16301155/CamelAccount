<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_find"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#eadd09"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextAppearance="@style/ToolbarTitle" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_find">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_class"
                android:layout_width="96dp"
                android:layout_height="112dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_class_title"
                app:srcCompat="@drawable/licai" />

            <TextView
                android:id="@+id/textView_class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="理财基础课"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/imageView_class"
                app:layout_constraintTop_toTopOf="@+id/imageView_class" />

            <TextView
                android:id="@+id/textView_class_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="一看就懂，手把手教你学理财"
                app:layout_constraintStart_toStartOf="@+id/textView_class_name"
                app:layout_constraintTop_toBottomOf="@+id/textView_class_name" />

            <TextView
                android:id="@+id/textView_subscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3504人已购买"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_class"
                app:layout_constraintStart_toStartOf="@+id/textView_class_content" />

            <TextView
                android:id="@+id/textView_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="共18课"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView_class_name" />

            <TextView
                android:id="@+id/textView_class_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="财富星课堂"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="查看全部>>"
                app:layout_constraintBottom_toBottomOf="@+id/textView_class_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView_class_title" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_class">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_huilv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="汇率计算器"
                app:layout_constraintEnd_toEndOf="@+id/imageButton_huilv"
                app:layout_constraintStart_toStartOf="@+id/imageButton_huilv"
                app:layout_constraintTop_toBottomOf="@+id/imageButton_huilv" />

            <ImageButton
                android:id="@+id/imageButton_huilv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="39dp"
                android:layout_marginLeft="39dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/button_shape"
                android:src="@drawable/ic_huilv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageButton_daikuan"
                app:layout_constraintTop_toTopOf="@+id/imageButton_daikuan" />

            <TextView
                android:id="@+id/textView_daikuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="房贷计算器"
                app:layout_constraintEnd_toEndOf="@+id/imageButton_daikuan"
                app:layout_constraintStart_toStartOf="@+id/imageButton_daikuan"
                app:layout_constraintTop_toBottomOf="@+id/imageButton_daikuan" />

            <ImageButton
                android:id="@+id/imageButton_daikuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="39dp"
                android:layout_marginLeft="39dp"
                android:background="@drawable/button_shape"
                android:src="@drawable/ic_daikuan"
                app:layout_constraintEnd_toStartOf="@+id/imageButton_huilv"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageButton_fapiao"
                app:layout_constraintTop_toTopOf="@+id/imageButton_fapiao" />

            <TextView
                android:id="@+id/textView_fapiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="发票助手"
                app:layout_constraintEnd_toEndOf="@+id/imageButton_fapiao"
                app:layout_constraintStart_toStartOf="@+id/imageButton_fapiao"
                app:layout_constraintTop_toBottomOf="@+id/imageButton_fapiao" />

            <ImageButton
                android:id="@+id/imageButton_fapiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginLeft="38dp"
                android:background="@drawable/button_shape"
                android:src="@drawable/ic_fapiao"
                app:layout_constraintEnd_toStartOf="@+id/imageButton_daikuan"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageButton_ketang"
                app:layout_constraintTop_toTopOf="@+id/imageButton_ketang" />

            <TextView
                android:id="@+id/textView_ketang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="财富星课堂"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageButton_ketang"
                app:layout_constraintStart_toStartOf="@+id/imageButton_ketang"
                app:layout_constraintTop_toBottomOf="@+id/imageButton_ketang" />

            <ImageButton
                android:id="@+id/imageButton_ketang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_shape"
                android:src="@drawable/ic_ketang"
                app:layout_constraintEnd_toStartOf="@+id/imageButton_fapiao"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_function_title" />

            <TextView
                android:id="@+id/textView_function_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="常用功能"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView_toolbartitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="发现"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_find"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar_find" />
</android.support.constraint.ConstraintLayout>